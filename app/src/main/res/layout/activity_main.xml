<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="#2F3C7E"


    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="340dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"


        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:outlineAmbientShadowColor="#fff"

        app:cardBackgroundColor="#D36F6F"
        >


        <TextView
            android:id="@+id/displayAnswer"
            android:layout_width="235dp"
            android:layout_height="79dp"
            android:layout_marginStart="20dp"

            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"
            android:autoSizeMaxTextSize="50dp"

            android:autoSizeMinTextSize="12dp"
            android:autoSizeStepGranularity="2dp"
            android:fontFamily="@font/varela_font"


            android:autoSizeTextType="uniform"
            android:textSize="50dp"




            android:hint="password" />

        <Button
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="go"
            android:textSize="30dp"
            android:fontFamily="@font/varela_font"

            android:onClick="clicked"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/circle_button"


            />
        <Button
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:onClick="Copy"

            android:layout_marginTop="70dp"
            android:layout_marginLeft="270dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/baseline_content_copy_24"


            />



        <EditText
            android:id="@+id/inputLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textAlignment="center"
            android:hint="size"
            android:fontFamily="@font/varela_font"
            android:background= "@drawable/corners"
            android:ems="10"

            android:inputType="numberSigned"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:fontFamily="serif-monospace"
        android:text="password generator 2.0"
        android:textColor="#fff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>